<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3> EDITAR KART</h3>
        </div>
        <div class="card-body">
            <form action="/karts/editKarts/{{edKart._id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="categoria" class="form-control" placeholder="Categoria" value="{{edKart.categoria}}">                      <!-- MANTENER EL MISMO FORMATO DE VARIABLES SENSIBLE A CAMBIOS EN MAYUSCULAS Y MINUSCULAS-->
                </div>
                <div class="form-group">
                    <input type="text" name="numeroKart" class="form-control" placeholder="Numero Kart" value="{{edKart.numeroKart}}">
                </div>
                <div class="form-group">
                    <textarea  name="descripcion" class="form-control">{{edKart.descripcion}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>