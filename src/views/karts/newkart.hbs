{{#each errors}}                                                      <!-- Esto es sintaxis de handlebars donde haremos validacion de los errores para desplegarlos  -->
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{text}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/each}}


<div class="col-md-4 mx-auto">
    <div class="card">
    <div class="card-header">
        <h3>Nuevo Kart</h3>
    </div>
    <div class="card-body"> <!-- Contenido del formulario -->
        <form action="/karts/newkart" method="POST">
        <div class="form-group">
            <label for="categoria" class="form-label">Categoria</label>
            <input type="text" name="categoria" class="form-control" placeholder="Categoria" autofocus>
        </div>
        <div class="form-group">
            <label for="numerokart" class="form-label">Numero Kart</label>
            <input type="text" name="numeroKart" class="form-control" placeholder="Numero Kart" >
        </div>
         <div class="form-group">
             <label for="descripcion" class="form-label">Descripcion</label>
             <textarea name="descripcion" class="form-control" placeholder="Descripcion"></textarea>
        </div>
        <div class="form-group" >
            <button class="btn btn-primary btn-lock" type="submit">Registrar Kart</button>
        </div>
        </form>
    </div>
</div>
</div>